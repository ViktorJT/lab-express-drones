<h2>Available drones</h2>

{{#each drones}}
  <br>
  <hr>
  <h4>{{name}}</h4>
  <table>
    <tr>
      <th>propellers</th>
      <th>max-speed</th>
      <th><a href="/drones/{{id}}/edit">edit</a></th>
    </tr>
    <tr>
      <td>{{propellers}}</td>
      <td>{{maxSpeed}}</td>
      <td>
        <form action="/drones/{{id}}/delete" method="post">
          <button type="submit">delete</button>
        </form>
      </td>
    </tr>
  </table>
{{/each}}


<br><br>
<a href="/drones/create">+ Create new drone</a>
