<h2>Update {{name}}</h2>

<form action="/drones/{{id}}/edit" method="post">
  <label for="nameInput">Drone name</label><br>
  <input type="text" id="nameInput" name="name" value="{{name}}" required>
  <br><br>

  <label for="propellersInput"># of Propellers</label><br>
  <input type="number" id="propellersInput" name="propellers" value="{{propellers}}"><br><br>

  <label for="maxSpeedInput">Max-speed</label><br>
  <input type="number" id="maxSpeedInput" name="maxSpeed" value="{{maxSpeed}}"><br><br>

  <button type="submit">Update drone</button>
</form>
